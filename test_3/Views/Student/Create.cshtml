@model test_3.Models.Student

@{
    ViewData["Title"] = "Create";

    List<String> streams = ViewBag.streams;
}

<h1>Create</h1>

<h4>Student</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterDate" class="control-label"></label>
                <input asp-for="RegisterDate" class="form-control" type ="date"/>
                <span asp-validation-for="RegisterDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthdayDate" class="control-label"></label>
                <input asp-for="BirthdayDate" class="form-control" type ="date"/>
                <span asp-validation-for="BirthdayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ALStream" class="control-label"></label>
                <select asp-for="ALStream" class="form-control" >
                    @foreach (string st in streams)
                    {
                        <option value=@st>@st</option>
                    }

                </select>
                <span asp-validation-for="ALStream" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
